{
    "manifest_version": 3,
    "name": "Echo",
    "version": "1.0.0",
    "description": "An extension designed to assist with online customer support using artificial intelligence (AI).",

    "permissions": [
        "storage"
    ],

    "background": {
        "service_worker": "src/background/index.js",
        "type": "module"
    },

    "action": {
        "default_popup": "src/popup/index.html",
        "default_title": "Echo"
    },

    "options_page": "src/options/index.html",

    "icons": {
        "01": "icons/icon01.png",
        "02": "icons/icon02.png",
        "03": "icons/icon03.png"
    },

    "content_scripts": [
        {
            "matches": [
                "https://erp.iredinternet.com.br/*"
            ],
            "js": [
                "src/content/collector.js"
            ],
            "run_at": "document_end",
            "all_frames": false
        }
    ]
}