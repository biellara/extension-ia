{
  "manifest_version": 3,
  "name": "Echo (DEV)",
  "version": "1.0.0",
  "description": "An extension designed to assist with online customer support using AI.",

  "permissions": ["storage", "contextMenus", "downloads"],
  "host_permissions": [
    "https://erp.iredinternet.com.br/*",
    "https://generativelanguage.googleapis.com/*",
    "https://extension-ia.vercel.app/*"
   ],

  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },

  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "Echo"
  },

  "options_page": "src/options/index.html",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://erp.iredinternet.com.br/attendance/*"],
      "js": ["src/content/collector.js"],
      "css": ["src/content/overlay.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}