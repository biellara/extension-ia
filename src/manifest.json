{
  "manifest_version": 3,
  "name": "Echo (DEV)",
  "version": "1.0.0",
  "description": "An extension designed to assist with online customer support using AI.",

  "permissions": ["storage", "contextMenus", "downloads", "offscreen"],
  "host_permissions": ["https://erp.iredinternet.com.br/*"],

  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },

  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "Echo"
  },

  "options_page": "src/options/index.html",

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://erp.iredinternet.com.br/attendance/*"],
      "js": ["src/content/collector.js"],
      "css": ["src/content/overlay.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/content/overlay.css",
        "offscreen.html"
      ],
      "matches": [
        "https://erp.iredinternet.com.br/*"
      ]
    }
  ]
}
